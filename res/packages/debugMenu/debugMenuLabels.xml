<ttMacro name="debugMenu.addLabel">
    <ttMacroParams>
        <ttMacroParamDef name="$name"/>
        <ttMacroParamDef name="$menuName"/>
        <ttMacroParamDef name="$touchesBeganMacro"/>
        <ttMacroParamDef name="$touchesBeganMacroParam"/>
    </ttMacroParams>
	<ttMacroBody>
        <ttObject>
            <ttType>lable</ttType>
            <ttImage>$name</ttImage>
            <ttBasePositionX>50</ttBasePositionX>
            <ttBasePositionY>37</ttBasePositionY>
            <ttRedPercentage>51.7</ttRedPercentage>
            <ttGreenPercentage>84.7</ttGreenPercentage>
            <ttBluePercentage>100</ttBluePercentage>
            <ttFontSize>30</ttFontSize>
            <ttActionsGroup>
                <ttTrigger>automatic</ttTrigger>
                <ttSequenceGroup>
                    <ttAction>
                        <ttType>runScript</ttType>
                        <ttScript>debugMenu:addLabel("$name", "$menuName")</ttScript>
                    </ttAction>
                </ttSequenceGroup>
                <ttSequenceGroup>
                    <ttAction>
                        <ttType>sendNotification</ttType>
                        <ttNotificationIdentifyer>script: return "label.".."$name"</ttNotificationIdentifyer>
                    </ttAction>
                </ttSequenceGroup>
            </ttActionsGroup>
            <ttActionsGroup>
                <ttTrigger>notification</ttTrigger>
                <ttNotificationIdentifyer>script: return "label.".."$name"</ttNotificationIdentifyer>
                <ttSequenceGroup>
                    <ttAction>
                        <ttType>moveToPoint</ttType>
                        <!--<ttFinalPositionX>50</ttFinalPositionX>
                        <ttFinalPositionY>script: return debugMenu:calculateLabelY("$name")</ttFinalPositionY>-->
                        <ttFinalPosition x="50" y="script: return debugMenu:calculateLabelY('$name')"/>
                        <ttActionDuration>0</ttActionDuration>
                    </ttAction>
                </ttSequenceGroup>
            </ttActionsGroup>
            <ttActionsGroup>
                <ttTrigger>onTouchesBegan</ttTrigger>
                <ttMacroInvoke macro_name="$touchesBeganMacro">
                    <ttMacroParam name="$param" value="$touchesBeganMacroParam"/>
                </ttMacroInvoke>
            </ttActionsGroup>
        </ttObject>
    </ttMacroBody>
</ttMacro>

